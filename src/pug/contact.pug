                    div(class="max-w-2xl mx-auto")
                        div(class="bg-greenSecondary-900 rounded-2xl p-8")
                            h2(class="text-white text-2xl font-bold mb-6 text-center") Envie uma mensagem
                            form
                                div(class="flex flex-wrap -m-2")
                                    div(class="w-full md:w-1/2 p-2")
                                        label(class="text-white text-sm mb-2 block") Nome*
                                        input(type="text", class="w-full px-4 py-3 rounded-lg bg-darkGreen-900 text-white border border-white border-opacity-20 focus:border-sweetGreen-400 focus:outline-none", required)
                                    div(class="w-full md:w-1/2 p-2")
                                        label(class="text-white text-sm mb-2 block") Email*
